<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- 目标框架和主要输出路径 -->
    <TargetFramework>net8.0</TargetFramework>
    <OutputPath>bin\$(Configuration)\</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>

    <!-- 其他属性 -->
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <InformationalVersion>1.0.0.0</InformationalVersion>
    <Configurations>Debug;Release</Configurations>
    <ImplicitUsings>enable</ImplicitUsings>
    <Platforms>AnyCPU</Platforms>
    <DebugType>portable</DebugType>
    <!-- 移除了 <BaseIntermediateOutputPath> 和 <IntermediateOutputPath> -->
    <OutputType>Library</OutputType>
  </PropertyGroup>

  <!-- <ItemGroup>
    <Compile Include="**/*.cs" />  <!-- 移除这一行，使用 SDK 默认行为 -->
  </ItemGroup> -->

  <ItemGroup>
    <!-- Core Emby dependencies -->
    <PackageReference Include="MediaBrowser.Server.Core" Version="4.9.1.80" PrivateAssets="All" />
    <!-- Other potential package references can go here if needed -->
    <!-- <PackageReference Include="MediaBrowser.Model" Version="4.9.1.80" PrivateAssets="All" /> -->
    <!-- <PackageReference Include="MediaBrowser.Controller" Version="4.9.1.80" PrivateAssets="All" /> -->
    <!-- <PackageReference Include="MediaBrowser.Common" Version="4.9.1.80" PrivateAssets="All" /> -->
    <!-- <PackageReference Include="Emby.Server.Implementations" Version="4.9.1.80" PrivateAssets="All" /> -->
    <!-- <PackageReference Include="MediaBrowser.MediaEncoding" Version="4.9.1.80" PrivateAssets="All" /> -->

    <!-- ILRepack for merging dependencies -->
    <PackageReference Include="ILRepack.Lib.MSBuild.Task" Version="2.0.18.1" PrivateAssets="All" />
  </ItemGroup>

  <!-- ILRepack target -->
  <Target Name="ILRepack" AfterTargets="Build" Condition="'$(Configuration)' == 'Release'">
    <ItemGroup>
      <InputAssemblies Include="$(OutputPath)$(AssemblyName).dll" />
      <!-- Add other assemblies to merge if necessary -->
      <!-- <InputAssemblies Include="$(OutputPath)SomeOtherLib.dll" /> -->
    </ItemGroup>
    <ILRepack
      Parallel="true"
      DebugInfo="true"
      Internalize="true"
      InputAssemblies="@(InputAssemblies)"
      OutputFile="$(OutputPath)$(AssemblyName).dll"
      LibraryPath="$(OutputPath)"
    />
  </Target>

</Project>
