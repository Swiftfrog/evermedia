<Project>
  <!-- 使用 Sdk 元素确保 Directory.Build.props 在项目解析早期被加载 -->
  <Sdk Name="Microsoft.NET.Sdk" />

  <PropertyGroup>
    <!-- 可以在这里覆盖 Directory.Build.props 中的属性（如果需要） -->
    <!-- 例如，指定不同的程序集名称或输出路径 -->
    <!-- <AssemblyName>EmbyMedia.Plugin</AssemblyName> -->
    <!-- <RootNamespace>EmbyMedia.Plugin</RootNamespace> -->
  </PropertyGroup>

  <ItemGroup>
    <!-- 包含项目目录及其子目录下的所有 .cs 源代码文件 -->
    <Compile Include="**/*.cs" />
    <!-- 如果有其他需要包含在构建中的文件（如配置文件、资源文件等），可以在这里添加 -->
    <!-- <Content Include="config.json" CopyToOutputDirectory="PreserveNewest" /> -->
    <!-- <EmbeddedResource Include="Resources\**" /> -->
  </ItemGroup>

  <!-- 注意：NuGet 包引用、目标框架、ILRepack 配置等都由同目录下的 Directory.Build.props 文件提供 -->
  <!-- 因此在此处无需重复定义 PackageReference 或 Target 标签 -->

</Project>
